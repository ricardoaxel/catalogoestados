<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.Id_Estado %>" method="POST">
          <div class="form-group">
            <input type="text" name="Nombre" value="<%= data.Nombre%>" placeholder="Nombre" class="form-control" autofocus pattern="^[a-zA-Z\sÀ-ÿ\u00f1\u00d1*]*$" required>
          </div>
          <div class="form-group">
            <input type="text" name="Capital" value="<%= data.Capital%>" placeholder="Capital" class="form-control" pattern="^[a-zA-Z\sÀ-ÿ\u00f1\u00d1*]*$" required>
          </div>
          <div class="form-group">
            <input type="text" name="N_Habitantes" value="<%= data.N_Habitantes%>" placeholder="N_Habitantes" class="form-control" pattern="^[0-9]*$" required>
          </div>
          <button type="submit" class="btn btn-primary">
            Guardar cambios
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
